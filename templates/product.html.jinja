<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
    <body>
        {% include "components/navbar.html.jinja"%}

        <div class="flex flex-row gap-10">

            <!--The products, the Description, the price and the cart at the top-->
            <div class="flex flex-row gap-8 p-5 mt-10 ">
                <!-- Left: Product Image-->
                <div class="w-150 aspect-square overflow-hidden rounded-lg">
                    <img 
                        src= "{{ product ['Image'] }}" 
                        alt= "{{ product ['Name'] }}"
                        class="w-full h-full object-cover"
                        >
                </div>

                <!--Right: Product Info-->
                <div class="flex flex-col gap-6 max-w-xl">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 leading-snug">{{product["Name"]}}</h1>
                    </div>

                    <p class="text-gray-600 text-lg font-bold"> ${{ product["Price"]}}</p>

                    <form method="post" action="/product/{{product['ID']}}/add_to_cart" >
                        <label>Quantity:</label>
                        <input type="number" name="quantity" value="1" min="1" max="20" class="w-15">
                            

                        <button class="bg-red-2-500 ">Add to cart</button>
                    </form>


                    <div class="bg-gray-500 rounded-xl shadow p-4">
                        <p class="font-bold text-2xl mb-1">Description</p>
                        <p class="text-gray-700">
                            {{ product["Description"] [:150]}}
                            {% if product["Description"]| length > 150 %}
                                <span id="more" class="hidden">
                                    {{product["Description"] [150:]}}
                                </span>
                            {%endif%}
                    

                        {% if product["Description"] | length > 150%}
                            <button
                                onclick="toggleDescription()"
                                id="toggleBtn"
                                class="text-blue-700 font-semibold text-sm mt-2 hover:underline">
                                ...more
                            </button>
                        {%endif%}
                        </p>
                    </div>
                </div>
            </div>

        </div>
            <!--Similar Products-->
    <div class="px-8 py-10 max-w-6xl mx-auto">

        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>

            <h1 class="px-4 text-3xl font-bold text-center text-gray-800">
                Similar Products
            </h1>

            <div class="flex-1 border-t border-gray-300"></div>
        </div>


        {% if products and products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for item in products %}
            <a href="/product/{{ item['ID'] }}"
                class="block bg-white shadow-md rounded-xl p-4 hover:shadow-xl transition duration-300">

                <img src="{{ item['Image'] }}" alt="{{ item['Name'] }}"
                    class="w-full h-48 object-cover rounded-lg mb-3">

                <h3 class="text-lg font-semibold mb-1">
                    {{ item['Name'] }}
                </h3>

                <p class="text-gray-700 font-medium">
                    ${{ item['Price'] }}
                </p>
            </a>
            {% endfor %}
        </div>

        {% else %}
        <p class="text-gray-600">No similar products available.</p>
        {% endif %}

    </div>

    <div>
        <h2 class="px-4 text-3xl font-bold text-center text-gray-800">Reviews</h2>

        {%if reviews and current_user.is_authenticated%}
            <div class="space-y-6"> 
                {%for x in reviews%}
                    <div class="bg-white rounded-xl shadow p-6">
                        
                        <div class="flex justify-between items-center mb-3">
                            <p class="text-sm text-gray-500">
                            {{x ["UserID"]}}
                            </p>
                            <p class="text-sm text-gray-500">
                            {{ x["TimeStamp"].strftime('%m/%d/%Y') }}
                            </p>
                        </div>

                        <div>
                            {%for i in range(1,6)%}
                                {% if i <= x["Ratings"] %}
                                    <span class="text-yellow-400 text-lg">★</span>
                                {% else %}
                                    <span class="text-gray-300 text-lg">★</span>
                                {% endif %} 
                            {%endfor%}
                                    
                        
                        </div>

                    

                        <div>
                        {{x ['ProductID']}}
                        
                        </div>
                    </div>
                {%endfor%}
            </div>   

        {%else%}
        <p class="text-center text-gray-500 mb-10">
            <a href="/login" class="text-blue-600 font-semibold hover:underline">
                Log in
            </a>
            to write a review.
        </p>

        {%endif%} 
    </div>

    <script>
        function toggleDescription() {
            const dots = document.getElementById("dots");
            const moreText = document.getElementById("more");
            const btn = document.getElementById("toggleBtn");

            if (moreText.classList.contains("hidden")) {
                moreText.classList.remove("hidden");
                dots.style.display = "none";
                btn.textContent = "...close";
            } else {
                moreText.classList.add("hidden");
                dots.style.display = "inline";
                btn.textContent = "...more";
            }
        }
    </script>

    </body>
</html>

<form method="post">
    <input label="text" type="number" min="1" max="5" value="1">
    
</form>