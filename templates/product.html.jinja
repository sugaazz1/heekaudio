<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
    <body>
        {% include "components/navbar.html.jinja"%}

        <div class="flex flex-row gap-10">

            <!--The products, the Description, the price and the cart at the top-->
            <div class="flex flex-row gap-8 p-5 mt-10 ">
                <!-- Left: Product Image-->
                <div class="w-150 aspect-square overflow-hidden rounded-lg">
                    <img 
                        src= "{{ product ['Image'] }}" 
                        alt= "{{ product ['Name'] }}"
                        class="w-full h-full object-cover"
                        >
                </div>

                <!--Right: Product Info-->
                <div class="flex flex-col gap-6 max-w-xl">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 leading-snug">{{product["Name"]}}</h1>
                    </div>

                    <p class="text-gray-600 text-lg font-bold"> ${{ product["Price"]}}</p>

                    <form method="post" action="/product/{{product['ID']}}/add_to_cart" >
                        <label>Quantity:</label>
                        <input type="number" name="quantity" value="1" min="1" max="20" class="w-15">
                            

                        <button class="bg-red-2-500 ">Add to cart</button>
                    </form>


                    <div class="bg-gray-500 rounded-xl shadow p-4">
                        <p class="font-bold text-2xl mb-1">Description</p>
                        <p class="text-gray-700">
                            {{ product["Description"] [:150]}}
                            {% if product["Description"]| length > 150 %}
                                <span id="more" class="hidden">
                                    {{product["Description"] [150:]}}
                                </span>
                            {%endif%}
                    

                        {% if product["Description"] | length > 150%}
                            <button
                                onclick="toggleDescription()"
                                id="toggleBtn"
                                class="text-blue-700 font-semibold text-sm mt-2 hover:underline">
                                ...more
                            </button>
                        {%endif%}
                        </p>
                    </div>
                </div>
            </div>

        </div>
            <!--Similar Products-->
    <div class="px-8 py-10 max-w-6xl mx-auto">

        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>

            <h1 class="px-4 text-3xl font-bold text-center text-gray-800">
                Similar Products
            </h1>

            <div class="flex-1 border-t border-gray-300"></div>
        </div>


        {% if products and products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for item in products %}
            <a href="/product/{{ item['ID'] }}"
                class="block bg-white shadow-md rounded-xl p-4 hover:shadow-xl transition duration-300">

                <img src="{{ item['Image'] }}" alt="{{ item['Name'] }}"
                    class="w-full h-48 object-cover rounded-lg mb-3">

                <h3 class="text-lg font-semibold mb-1">
                    {{ item['Name'] }}
                </h3>

                <p class="text-gray-700 font-medium">
                    ${{ item['Price'] }}
                </p>
            </a>
            {% endfor %}
        </div>

        {% else %}
        <p class="text-gray-600">No similar products available.</p>
        {% endif %}

    </div>

        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>

            <h1 class="px-4 text-3xl font-bold text-center text-gray-800">
                Reviews
            </h1>

            <div class="flex-1 border-t border-gray-300"></div>
        </div>


    <div class="flex flex-left space-x-400">
        {% if current_user.is_authenticated %}
            <div class="max-w-3xl mx-auto mb-10 bg-white p-6 rounded-xl shadow text-left">
                <h3 class="text-xl font-bold mb-4">Write a Review</h3>

                <form method="POST" action="/product/{{ product['ID'] }}/review">

                    <label class="block mb-1 font-semibold">Rating</label>
                    <input type="number"
                        name="rating"
                        min="1"
                        max="5"
                        value="5"
                        required
                        class="border rounded p-2 mb-4 w-full">

                    <label class="block mb-1 font-semibold">Comment</label>
                    <textarea name="comments"
                            required
                            class="border rounded p-2 mb-4 w-full"
                            rows="4"></textarea>

                    <button type="submit"
                            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                        Submit Review
                    </button>
                </form>
            </div>
            {% else %}
            <p class="text-center text-gray-500 mb-10">
                <a href="/login" class="text-blue-600 font-semibold hover:underline">
                    Log in
                </a>
                to write a review.
            </p>
            {% endif %}

            <div class="max-w-3xl mx-auto space-y-6 text-left">
                {% if reviews %}
                    {% for x in reviews %}
                        <div class="bg-white rounded-xl shadow p-6">

                            <div class="flex justify-between items-center mb-2">
                                <p class="font-semibold text-gray-800">
                                    {{ x["Name"] }}
                                </p>
                                <p class="text-sm text-gray-500">
                                    {{ x["TimeStamp"].strftime('%m/%d/%Y') }}
                                </p>
                            </div>

                            <div class="mb-2">
                                {% for i in range(1, 6) %}
                                    {% if i <= x["Ratings"] %}
                                    <span class="text-yellow-400">★</span>
                                    {% else %}
                                    <span class="text-gray-300">★</span>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <p class="text-gray-700">
                                {{ x["Comments"] }}
                            </p>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-center text-gray-500">
                        No reviews yet. Be the first to review!
                    </p>
                {% endif %}
    </div>
    </div>  


    <script>
        function toggleDescription() {
            const moreText = document.getElementById("more");
            const btn = document.getElementById("toggleBtn");

            if (moreText.classList.contains("hidden")) {
                moreText.classList.remove("hidden");
                btn.textContent = "...close";
            } else {
                moreText.classList.add("hidden");
                btn.textContent = "...more";
            }
        }
</script>

    </body>
</html>
