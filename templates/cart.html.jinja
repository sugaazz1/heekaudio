<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}

       <main>
            <!--Main header for the cart page-->
            <div>
                <h1 class="font-bold text-lg"> Your Cart</h1>
            </div>
            
        <div class="flex flex-row">
            {% if cart%}
            <div class="flex flex-col space-y-4 p-3">
                <hr>
                {% for x in cart%}
                
                    <div class="flex flex-row space-x-4 w-200 ">
                        
                        <div>
                            <a href="/product/{{x['ProductID']}}">
                            <img width="250"
                            src="{{ x['Image'] }}" 
                            alt="{{ x['Name'] }}"> </a>
                                
                        </div>
                        
                        <div> 
                        <a href="/product/{{x['ProductID']}}">
                            {{x["Name"]}}
                            </a>
                        </div>

                        <div>
                            <form method="post" action="/cart/{{x ['ProductID' ]}}/update_quantity"> 
                            <input name ="quantity" type="number" value="{{x ['Quantity']}}" min="1" max="20" class="w-12" >

                            </form>
                        </div>


                        <div> 
                        <form method="post" action="/cart/{{x ['ProductID'] }}/delete">
                            <button> Remove</button>
                        </form>
                        </div>

                        <div class="font-bold"> ${{ x ["Price"] }}</div>

                    </div>
                    <hr>
                {%endfor%}
                
                <span class="text-right text-xl">
                    Subtotal:
                    <p class="text-xl font-bold mt-1"> 
                        ${{"%.2f"|format(subtotal)}}
                    </p>
                </span>
            </div >

                <div class="w-150 p-5 bg-blue-100">
                    <h1 class="text-center"> Subtotal</h2>
 
                    <p class="text-xl font-bold mt-1"> 
                        ${{"%.2f"|format(subtotal)}}
                    </p>

                    <p class="text-sm italic text-gray-600 mt-2">
                        Shipping and taxes calculated at checkout
                    </p>


                    <a href="/checkout">
                    <button>Go to checkout</button></a>
                </div>
            
            {%else%}

            <div class="p-10 text-center w-full">
                <h2 class="text-xl font-semibold">Your cart is empty</h2>
                <p class="text-gray-500 mt-2">
                    Looks like you havenâ€™t added anything yet.
                </p>
                <a href="/" class="text-blue-600 underline mt-4 inline-block">
                    Continue shopping
                </a>
            </div>

    {% endif %}

        </div>

        </main>
                    
    </body>
</html>