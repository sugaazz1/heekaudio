<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}

       <main>
            <!--Main header for the cart page-->
            <div>
                <h1 class="font-bold text-lg"> Your Cart</h1>
            </div>
            
            {% for x in cart%}
            
                <div class="flex flex-row space-x-4 w-200 border-2 rounded-xl">
                    
                    <div>
                          <a href="/product/{{x['ID']}}">
                          <img width="250"
                           src="{{ x['Image'] }}" 
                           alt="{{ x['Name'] }}"> </a>
                            
                    </div>
                    
                    <div> 
                    <a href="/product/{{x['ID']}}">
                        {{x["Name"]}}
                        </a>
                    </div>

                    <div>
                        <form method="post" action="/cart/{{x ['ProductID' ]}}/update_quantity"> 
                        <input name ="quantity" type="number" value="{{x ['Quantity']}}" min="1" max="20" class="w-12" >

                        </form>
                    </div>



                    <div> {{ x ["Price"] * x ["Quantity"] }}</div>

                    <div> 
                    <form method="post" action="/cart/{{x ['ProductID'] }}/delete">
                        <button> Remove</button>
                    </form>
                    </div>

                </div>
            {%endfor%}
       </main>
                  
    </body>
</html>